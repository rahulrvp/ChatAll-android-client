<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_background_color"/>
    <ImageView
        android:id="@+id/friend_image"
        android:layout_below="@+id/border_line"
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/friend"/>
    <TextView
        android:layout_toRightOf="@id/friend_image"
        android:id="@+id/friends_name"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:singleLine="true"/>
    <TextView
        android:layout_toRightOf="@+id/friends_name"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="25dp" />
    <TextView
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/friend_image"
        android:layout_below="@+id/friends_name"/>

</RelativeLayout>
